<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/qspanel_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/qs_general_title" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="brightness_icon"
        android:title="@string/brightness_icon_title"
        android:summary="@string/brightness_icon_summary"
        android:dependency="qs_show_brightness_slider"
        android:defaultValue="false" /> 

    <com.android.settings.preference.SecureSettingSwitchPreference
	android:key="qs_show_brightness_slider"
	android:title="@string/qs_brightness_slider_title"
	android:summary="@string/qs_brightness_slider_summary"
	android:defaultValue="true" />

    <ListPreference
	android:key="quick_pulldown"
	android:title="@string/quick_pulldown_title"
	android:entries="@array/quick_pulldown_entries"
	android:entryValues="@array/quick_pulldown_values"
	android:persistent="false" />

    <com.android.settings.preference.SystemSettingSwitchPreference
	android:key="status_bar_show_weather"
	android:title="@string/status_bar_show_weather_title"
	android:summary="@string/status_bar_show_weather_summary"
	android:defaultValue="false" />

    <PreferenceCategory
	android:key="category_header_options"
	android:title="@string/contexual_header_title" >
 
	<SwitchPreference
            android:key="status_bar_custom_header"
            android:title="@string/status_bar_custom_header_title"
            android:summary="@string/status_bar_custom_header_summary"
            android:defaultValue="false"/>

	<ListPreference
            android:key="daylight_header_pack"
            android:title="@string/daylight_header_pack_title"
            android:persistent="false" />

	<com.android.settings.turbo.SeekBarPreference
            android:key="status_bar_custom_header_shadow"
            android:title="@string/status_bar_custom_header_shadow_title"
            android:summary="@string/status_bar_custom_header_shadow_summary"
            android:defaultValue="0"
            android:max="100"
            settings:minimum="0"
            settings:unitsLeft=""
            settings:unitsRight="@string/unit_percent"
            android:persistent="false"
            android:dependency="status_bar_custom_header" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_tiles_title" /> 

    <com.android.settings.preference.SecureSettingSwitchPreference
	android:key="qs_location_advanced"
	android:title="@string/qs_advanced_location_title"
	android:summary="@string/qs_advanced_location_summary"
	android:defaultValue="false" />

    <com.android.settings.preference.SecureSettingSwitchPreference
	android:key="sysui_qs_main_tiles"
	android:title="@string/qs_main_tiles_title"
	android:summary="@string/qs_main_tiles_summary"
	android:defaultValue="true" />

    <ListPreference
	android:key="sysui_qs_num_columns"
	android:title="@string/qs_num_columns_title"
	android:entries="@array/qs_num_columns_entries"
	android:entryValues="@array/qs_num_columns_values"
	android:persistent="false" />

    <PreferenceScreen
	android:title="@string/quick_settings_tiles_title"
	android:summary="@string/quick_settings_tiles_summary" >
	<intent android:action="android.intent.action.MAIN"
		android:targetPackage="com.android.systemui"
		android:targetClass="com.android.systemui.tuner.QsActivity" />
    </PreferenceScreen>

</PreferenceScreen>
